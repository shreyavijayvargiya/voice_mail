<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">#FFE0B2</item>
    </style>

    <style name="field">
        <item name="android:radius">9dp</item>
        <item name="android:shape">rectangle</item>
        <item name="color"></item>
        <item name="background">#FFFFFF</item>
</style>
    <style name="font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="SplashTheme">splash
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


    <style name="text_splash">text_splash
        <item name="android:textSize"> 46sp</item>
        <item name="fontFamily">cursive</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item></style>


    <style name="layout">

    </style>

    <style name="compose">

    </style>

</resources>
